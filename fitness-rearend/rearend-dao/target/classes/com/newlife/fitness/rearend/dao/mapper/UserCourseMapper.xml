<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlife.fitness.rearend.dao.UserCourseDAO">
  
  <!-- 根据用户id删除记录 -->
  <delete id="delUserCourseByUserId" parameterType="int">
  	DELETE FROM `newlife`.`user_course` WHERE `user_id` = #{userId}
  </delete>
 
  <delete id="delUserCourseByCId" parameterType="int">
  	DELETE FROM `newlife`.`user_course` WHERE `course_id` = #{cid}
  </delete>
</mapper>